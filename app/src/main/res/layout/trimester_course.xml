<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/expand"
        android:background="@drawable/ripple_effect_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:id="@+id/Grade"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:id="@+id/Code"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:id="@+id/Subject"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:id="@+id/Hours"/>
        </FrameLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/preRequestee"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:background="@color/colorAccent"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Pre-requisite"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:id="@+id/preRequest"/>
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="gone"
        android:id="@+id/trimesterTitle"
        android:paddingStart="10dp" />

    <FrameLayout
        android:id="@+id/thisaswell"
        android:visibility="gone"
        android:layout_below="@id/trimesterTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

</RelativeLayout>